# -------------------------------
# Server Configuration
# -------------------------------
PORT=8000

# -------------------------------
# MongoDB Configuration
# Replace <username>, <password>, and <cluster-url> with your Atlas details
# -------------------------------
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>

# -------------------------------
# CORS Configuration
# Allowed frontend origin (Vite default runs on port 5173)
# -------------------------------
CORS_ORIGIN=http://localhost:5173

# -------------------------------
# JWT Configuration
# Use strong random strings for secrets in your real .env
# -------------------------------
ACCESS_TOKEN_SECRET=your_access_token_secret_here
ACCESS_TOKEN_EXPIRY=28800000   # 8 hours in milliseconds

REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRY=864000000 # 10 days in milliseconds

# -------------------------------
# Cloudinary Configuration
# Get these values from Cloudinary Dashboard → Settings → API
# -------------------------------
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here
